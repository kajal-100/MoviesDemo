<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoviesDemo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#b73229</item>
        <item name="colorPrimaryVariant">#992a22</item>
        <item name="colorOnPrimary">@color/primary_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowDisablePreview">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextViewHeader" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/black_text_color</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="TextViewNormal" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/black_text_color</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextViewItalic" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/black_text_color</item>
        <item name="android:fontFamily">@font/poppins_semibolditalic</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/white</item>
    </style>

</resources>