<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoviesDemo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/status_bar_color</item>
        <item name="colorOnPrimary">@color/primary_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowDisablePreview">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextViewHeader" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textColor">@color/black_text_color</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextViewNormal" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/black_text_color</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

</resources>